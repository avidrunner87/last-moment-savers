<header class="no-padding">
	{{> mainNav }}
</header>
<main class="no-padding">
	<div class="row">
    	<div class="col s12 l6 login-image hide-on-med-and-down"></div>
		<div class="col s12 l6 login-screen valign-wrapper container">
			<div class="row center-align">
				<div class="col s10 offset-s1">
					<div class="card grey lighten-4 z-depth-0 card center-align">
						<div class="card-content">
							<span class="card-title">Welcome</span>
							<div class="row">
								<form class="col s12 login-form">
									<div class="row">
										<div class="input-field col s10 offset-s1">
											<input id="login-email" type="text" class="validate">
											<label for="login-email">Email Address</label>
										</div>
										<div class="input-field col s10 offset-s1">
											<input id="login-password" type="password" class="validate">
											<label for="login-password">Password</label>
										</div>
									</div>
								</form>
								<a id="login-submit" class="waves-effect waves-light btn">Login</a>
							</div>
						</div>
      				</div>
				</div>
			</div>
			<div class="row center-align">
				<div class="col s12">
					Don't have an account? <a href="#modal-signup" class="modal-trigger">Get Started</a>
				</div>
				<div class="col s12">
					<a href="#modal-forgotPassword" class="modal-trigger">Forgot Password?</a>
				</div>
			</div>
		</div>
	</div>

	{{!-- Modal for Signup --}}
	<div id="modal-signup" class="modal card modal-card">
    	<div class="modal-content">
      		<h4>Get Started</h4>
			<form class="col s12 signup-form">
				<div class="row">
					<div class="input-field col s10 offset-s1">
						<input id="signup-firstName" type="text" class="validate">
						<label for="signup-firstName">First Name</label>
					</div>
					<div class="input-field col s10 offset-s1">
						<input id="signup-LastName" type="text" class="validate">
						<label for="signup-firstName">Last Name</label>
					</div>

					<div class="input-field col s10 offset-s1">
						<input id="signup-email" type="text" class="validate">
						<label for="signup-email">Email Address</label>
					</div>
					<div class="input-field col s10 offset-s1">
						<input id="signup-password" type="password" class="validate">
						<label for="signup-password">Password</label>
					</div>
				</div>
			</form>
    	</div>
    	<div class="modal-footer">
      		<a id="signup-submit" class="modal-close btn-flat">Sign Up</a>
    	</div>
  	</div>

	{{!-- Modal for Forgot Password --}}
	<div id="modal-forgotPassword" class="modal card modal-card">
    	<div class="modal-content">
      		<h4>Reset Your Password</h4>
			<p>In order to get instructions to reset your password, please enter your email address associated with your account.</p>
			<form class="col s12 reset-form">
				<div class="row">
					<div class="input-field col s10 offset-s1">
						<input id="reset-email" type="text" class="validate">
						<label for="reset-email">Email Address</label>
					</div>
				</div>
			</form>
		</div>
    	<div class="modal-footer">
      		<a id="reset-submit" class="modal-close btn-flat">Send Instructions</a>
    	</div>
  	</div>

	<script src="/assets/scripts/login.js"></script>

</main>
